# Copy this file to .env and fill in your credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REFRESH_TOKEN=your_spotify_refresh_token
# Optional configuration
# Redirect URI used during OAuth flow (must match your app settings)
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8888/callback
# Number of tracks to display in "Recently Played"
SPOTIFY_RECENTLY_PLAYED_LIMIT=5
# Number of items to display in "Top Artists/Tracks"
SPOTIFY_TOP_LIMIT=5
# Width of the progress bar (characters)
SPOTIFY_PROGRESS_BAR_WIDTH=20
